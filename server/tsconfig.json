// https://nodejs.org/api/typescript.html#type-stripping
{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "#src/*": ["./src/*"],
      "#features/*": ["./src/features/*"]
    }
  },
  "include": ["src"]
}
