// https://nodejs.org/api/typescript.html#type-stripping
{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "#features/*": ["./src/features/*"],
      "#redis": ["./src/redis"],
      "#trpc": ["./src/trpc"]
    }
  },
  "include": ["src"]
}
